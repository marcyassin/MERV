<resources>
    <style name="ShadowedText">
  	    <item name="android:shadowRadius">1</item>
  	    <item name="android:shadowDx">0</item>
  	    <item name="android:shadowDy">-1</item>
    </style>

    <style name="ShadowedText.Light">
  	    <item name="android:shadowColor">#555</item>
  	    <item name="android:textColor">#FFF</item>
    </style>

    <style name="Widget">
        <item name="android:textAppearance">?android:attr/textAppearance</item>
    </style>

    <style name="Widget.QuickContactBadge">
        <item name="android:layout_width">50dip</item>
        <item name="android:layout_height">56dip</item>
        <item name="android:background">@drawable/quickcontact_badge</item>
        <item name="android:clickable">true</item>
        <item name="android:scaleType">fitCenter</item>
    </style>
</resources>